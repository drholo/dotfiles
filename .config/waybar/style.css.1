#workspaces button {
    padding: 0 5px;
    font-size: 24px;
    background: transparent;
    color: white;
    border-top: 4px solid transparent;
}

#workspaces button.focused {
    color: rgb(246, 201, 169);
    border-top: 4px solid rgb(246, 201, 169);
}

#workspaces button.urgent {
    color: rgb(175, 95, 95);
    border-top: 4px solid rgb(175, 95, 95);
}

#mode {
    background: #64727D;
    border-bottom: 3px solid white;
}

#clock, #battery, #cpu, #memory, #network, #pulseaudio, #custom-spotify, #custom-keyboard-layout, #custom-weather, #tray, #mode {
    padding: 0 3px;
    margin: 0 2px;
}

#custom-keyboard-layout {
    color: #5FAFAF
}

#clock {
    font-weight: bold;
}

#battery {
}

#battery icon {
    color: red;
}

#battery.charging {
}

@keyframes blink {
    to {
        background-color: #ffffff;
        color: black;
    }
}

#battery.warning:not(.charging) {
    color: white;
    animation-name: blink;
    animation-duration: 0.5s;
    animation-timing-function: linear;
    animation-iteration-count: infinite;
    animation-direction: alternate;
}

#cpu {
    color: #8FAFD7
}

#memory {
    color: #8FAFD7
}

#network {
    color: #87AF87
}

#network.disconnected {
    background: #f53c3c;
}

#pulseaudio {
}

#pulseaudio.muted {
}

#custom-spotify {
    background: rgba(102, 204, 153, 0.7);
    color: #202020;
}

#tray {
    background-color: #0A1E2B;
}
